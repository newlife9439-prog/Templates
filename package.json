{
  "name": "third-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "check": "npm run lint:html && npm run lint:css"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "htmlhint": "^1.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.0"
  }
}
